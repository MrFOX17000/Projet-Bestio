{% extends 'base.html.twig' %}

{% block title %}Questions sur {{ nom_espece }}{% endblock %}

{% block body %}
<h1 class="d-flex justify-content-center pb-30">Forum : {{ nom_espece }}</h1>
<div class="separator"></div>

<div class="d-flex flex-column align-items-center">
    {% if questions is not defined or questions|length == 0 %}
        <div class="lien-question mb-20">
            <p>Aucune question n'a encore été posée sur cette espèce.</p>
        </div>
        <div class="d-flex justify-content-center">
            <a href="{{ path('app_show_espece', {'nom': nom, 'nom_espece': nom_espece}) ~ '#form-question' }}" class="btn btn-primary-stroke">
                Poser une question
            </a>
        </div>
    {% else %}
        <div class="d-flex flex-row-wrap justify-content-center gap-40">
            {% for question in questions %}
                <div class="block question-card">
                    <div class="d-flex align-items-center justify-content-between mb-10">
                        <div class="d-flex align-items-center">
                            <h2 class="m-0">{{ question.titreQuestion ?? question.titre ?? 'Question' }}</h2>
                            {# Nouveauté de ton duo: affichage du lock/unlock à côté du titre #}
                            {% if question.locked is defined %}
                                <i class="fa-solid {{ question.locked ? 'fa-lock' : 'fa-unlock' }} ml-10" aria-label="{{ question.locked ? 'Discussion verrouillée' : 'Discussion ouverte' }}"></i>
                            {% endif %}
                        </div>

                        {# Avatar auteur cliquable vers le profil #}
                        {% set photo = attribute(question.author, 'photo') ?? null %}
                        {% if photo %}
                            {% set avatarUrl = photo starts with('/') ? asset(photo) : asset('uploads/avatar/' ~ photo) %}
                        {% else %}
                            {% set avatarUrl = asset('images/profil.webp') %}
                        {% endif %}
                        <a href="{{ path('user', {'id': question.author.id}) }}" class="avatar-link" title="Voir le profil de {{ question.author.pseudo ?? question.author.email }}">
                            <img src="{{ avatarUrl }}" alt="Avatar de {{ question.author.pseudo ?? 'utilisateur' }}" class="avatar-img">
                        </a>
                    </div>

                    {% if question.description is defined and question.description %}
                        <p class="question-text">{{ question.description }}</p>
                    {% endif %}

                    <small>
                        Posée par
                        <strong>{{ question.author.pseudo ?? question.author.email }}</strong>
                        le {{ question.createdAt|date('d/m/Y à H:i') }}
                    </small>

                    <div class="d-flex justify-content-end mt-10">
                        <a class="btn btn-primary-stroke" href="{{ path('app_forum_question_show', {'id': question.id, 'nom_espece': nom_espece}) }}">
                            Voir la discussion
                        </a>
                    </div>

                    {% if app.user == question.author or is_granted('ROLE_ADMIN')  %}
                        <form class= "delete-question" method="post" action="{{ path('delete_question', {id: question.id}) }}";
                            <input type="hidden" name="_method" value="DELETE">
                            <button class="btn-delete-question" type="submit"> <i class="fa-solid fa-trash"></i> </button>
                        </form>  
                    {% endif %}

                </div>
            {% endfor %}
        </div>
    {% endif %}
</div>
{% endblock %}