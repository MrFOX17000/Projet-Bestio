{% extends 'base.html.twig' %}

{% block title %}{{ classe.nom }}{% endblock %}


{% block body %}
<h2>{{ classe.nom }}</h2>
<p>Appartient à la catégorisation : {{ classe.appartenir.nomCategorisation }}</p>
<p> Description : {{ classe.specificite }}</p>
<img src="{{ classe.image }}" alt="image-{{ classe.nom }}">

<h3>Espèces associées :</h3>
<ul>
    {% for espece in classe.dependre|slice(0, 3) %}
        <img src="{{ espece.image }}" alt="{{ espece.nomEspece }}">
        <li><a class="warning" href="{{ path('app_show_espece', {'nom':classe.nom,'nom_espece':espece.nomEspece})}}">{{ espece.nomEspece }}</a></li>
    {% else %}
        <p>Aucune espèce disponible.</p>
    {% endfor %}
</ul>
{% endblock %}