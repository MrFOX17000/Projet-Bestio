<div class="d-flex flex-row-nowrap fil-ariane">
    <small class="ml-20 mt-10">
        <a href="{{ path('app_home') }}">Accueil</a>

        {# Page Classe #}
        {% if app.request.attributes.get('_route') == 'app_show_classe' %}
            {% set nom = app.request.attributes.get('_route_params').nom %}
            /
            <a href="{{ path('app_show_classe', {'nom': nom}) }}">
                {{ classe.nom }}
            </a>
        {% endif %}

        {# Page Esp√®ce #}
        {% if app.request.attributes.get('_route') == 'app_show_espece' %}
            {% set nom = app.request.attributes.get('_route_params').nom %}
            {% set nom_espece = app.request.attributes.get('_route_params').nom_espece %}

            /
            <a href="{{ path('app_show_classe', {'nom': nom}) }}">
                {{ classe.nom }}
            </a>
            /
            <a href="{{ path('app_show_espece', {'nom': nom, 'nom_espece': nom_espece}) }}">
                {{ espece.nomEspece }}
            </a>
        {% endif %}
    </small>
</div>
