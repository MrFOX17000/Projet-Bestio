{% extends 'base.html.twig' %}

{% block title %}Ajouter une catégorie{% endblock %}


{% block body %}
<div id="wrapper-categorie">
   {{ form_start(formCategorisation) }}
       {{ form_widget(formCategorisation) }}
       <button aria-label="Enregistrer" type="submit" class="btn btn-primary">Enregistrer</button>
   {{ form_end(formCategorisation) }}

    <h1> Liste des catégories </h1>
    {% for category in categories %}
        {{ category.nomCategorisation }}
        <a href="{{ path('delete_categorie', {'id':category.id})}}">
            <i class="fa-solid fa-trash"></i>
        </a> <br>
    {% endfor %}
</div>
{% endblock %}

